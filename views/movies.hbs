<div class="container">
    <div class="row">
        {{#each movies}}
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{image}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <a href="/movies/{{_id}}" class="btn btn-primary">View Movies</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>